{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/applog-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "ApplicationName": "AlertApp"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AlertDb": "Server=localhost;Database=AlertDb;User Id=sa;Password=Password123!;TrustServerCertificate=True;",
    "Hangfire": "Server=localhost;Database=Hangfire;User Id=sa;Password=Password123!;TrustServerCertificate=True;",
  },
  "AlertApiSettings": {
    "AlertEndpointUrl": "https://s3.eu-central-1.amazonaws.com/app-prod-static.warnwetter.de/v16/crowd_meldungen_overview_v2.json"
  },
  "JobSettings": {
    "CronExpression": "*/5 * * * *"
  }
}
